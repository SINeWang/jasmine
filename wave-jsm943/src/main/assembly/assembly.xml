<assembly>
    <id>assembly</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>conf</outputDirectory>
            <fileMode>0644</fileMode>
            <excludes>
                <exclude>logback.xml</exclude>
                <exclude>META-INF/autoconf/</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/META-INF/autoconf</directory>
            <outputDirectory>META-INF/autoconf</outputDirectory>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <directory>script</directory>
            <outputDirectory>/</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>WebRoot</directory>
            <outputDirectory>/WebRoot</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <excludes>
                <!--<exclude>wave-jsm943*</exclude>-->
            </excludes>
        </dependencySet>
    </dependencySets>
</assembly>